
<div class="container text-center">
  <div class="bg-light py-5 px-4 px-md-5">
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <h1 class="mb-5">
      アカウントを作成する
    </h1>
    <div class="row">
      <div class="form-group col-md-6">
          <%= f.label :last_name, "(性)" %> <%= f.text_field :last_name, autofocus: true, :placeholder =>"名字", class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
          <%= f.label :first_name, "(名)" %> <%= f.text_field :first_name, autofocus: true, :placeholder =>"名前", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :last_name_kana, "(セイ)" %> <%= f.text_field :last_name_kana, autofocus: true, :placeholder =>"ミョウジ", class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :first_name_kana, "(ナマエ)" %> <%= f.text_field :first_name_kana, autofocus: true, :placeholder =>"ナマエ", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :school_year, "学年" %>
      <%= f.select :school_year, [['1年', '1年'], ['2年', '2年'], ['3年', '3年'], ['4年', '4年']],{}, { class: "form-control"} %>
    </div>
    <div class="form-group">
      <%= f.label :faculty, "学部" %>
      <%= f.text_field :faculty, :placeholder =>"社会学部", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :introduction, "紹介文" %>
      <%= f.text_area :introduction, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :anonymity, "検索画面での表示" %>
      <%= f.select :anonymity, [['表示', 'false'], ['非表示', 'true']],{}, { class: "form-control"} %>
    </div>
    <div class="form-group">
      <div>
      <%= f.label :profile_image, "プロフィール画像" %>
      </div>
      <%= f.file_field :profile_image, :placeholder =>"プロフィール画像", accept:"image/*" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード(確認用)" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  </div>
</div>
<% end %>





