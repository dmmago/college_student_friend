<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="row gx-4 gx-lg-5 align-items-center">
      <div class="col-md-6">
        <%= image_tag @customer.get_profile_image(700,600) %>
      </div>
      <div class="col-md-6">
        <h3 class="display-5 fw-bolder">
          <%= @customer.full_name_kana %>
        </h3>
        <h1 class="display-5 fw-bolder">
          <%= @customer.full_name %>
        </h1>
        <p class="school_year">
          <%= @customer.faculty %>
          <%= @customer.school_year %>
        </p>
        <p class="introduction">
          <%= @customer.introduction %>
        </p>
        <div class="link">
          <% if current_customer.id == @customer.id %>
          <%= link_to "編集する", edit_customer_path(current_customer.id), class: "btn btn-primary mx-2"  %>
          <% else %>
          <%= link_to "フレンド申請", friend_requests_path({customer_id:@customer.id,reaction: "approve"}), method: :post, class: "btn btn-primary mx-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

