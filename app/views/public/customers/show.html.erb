<section class="inner">
  <h2 class="titel">ユーザーページ</h2>
  <h3>
    登録情報
  </h3>
  <%= image_tag @customer.get_profile_image(100,100) %>
  <table>
    <thead>
    </thead>
    <tbody>
      <tr>
        <td><%= @customer.last_name_kana %></td>
        <td><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td><%= @customer.last_name %></td>
        <td><%= @customer.first_name %></td>
      </tr>
      <tr>
        <td><%= @customer.faculty %></td>
        <td><%= @customer.school_year %></td>
      </tr>
    </tbody>
  </table>
  <%= @customer.introduction %>
    <% if current_customer.id == @customer.id %>
    <%= link_to "編集する", edit_customer_path(current_customer.id)  %>
    <% else %>
    <%= link_to "フレンド申請", friend_requests_path({customer_id:@customer.id,reaction: "approve"}), method: :post %>
    <% end %>




</section>

