
<div class="container text-center">
  <div class="bg-light py-5 px-4 px-md-5">
    <%= form_with model: @customer do |f| %>
    <h1 class="mb-5">
      マイページ編集
    </h1>
    <div class="row">
      <div class="form-group col-md-6">
          <%= f.label :last_name, "(性)" %> <%= f.text_field :last_name, autofocus: true, :placeholder =>"#{@customer.last_name}", class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
          <%= f.label :first_name, "(名)" %> <%= f.text_field :first_name, autofocus: true, :placeholder =>"#{@customer.first_name}", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :last_name_kana, "(セイ)" %> <%= f.text_field :last_name_kana, autofocus: true, :placeholder =>"#{@customer.last_name_kana}", class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :first_name_kana, "(ナマエ)" %> <%= f.text_field :first_name_kana, autofocus: true, :placeholder =>"#{@customer.first_name_kana}", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :school_year, "学年" %>
      <%= f.text_field :school_year, :placeholder =>"#{@customer.school_year}", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :faculty, "学部" %>
      <%= f.text_field :faculty, :placeholder =>"#{@customer.faculty}", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :introduction, "紹介文" %>
      <%= f.text_area :introduction, :placeholder =>"#{@customer.introduction}", class: "form-control" %>
    </div>
    <div class="form-group">
      <div>
      <%= f.label :profile_image, "プロフィール画像" %>
      </div>
      <%= f.file_field :profile_image, :placeholder =>"プロフィール画像", accept:"image/*" %>
    </div>
    <div class="form-group">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>
